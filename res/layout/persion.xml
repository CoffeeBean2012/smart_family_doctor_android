<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2">
    
     <LinearLayout 
     	android:layout_width="match_parent"
    	android:layout_height="wrap_content"  
    	android:orientation="vertical" 
        >
        <RelativeLayout
        	android:layout_width="fill_parent"
        	android:layout_height="50dp"
        	android:background="#018e7d"
        	android:orientation="horizontal" >

        	<ImageButton
            	android:id="@+id/add_back"
            	android:layout_width="30dp"
            	android:layout_height="30dp"
            	android:layout_centerVertical="true"
            	android:layout_marginLeft="10dp"
            	android:layout_marginTop="1dp"
            	android:background="@drawable/infor"
             />

        	<TextView
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerInParent="true"
           		android:text="@string/app_name"
            	android:textColor="@android:color/white"
            	android:textSize="20dp" />
        
    	</RelativeLayout>
    </LinearLayout>
    
    <LinearLayout 
     	android:layout_width="match_parent"
    	android:layout_height="wrap_content"  
    	android:orientation="vertical" 
        >
        <LinearLayout    
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content" 
          	android:layout_marginTop="15dip"      
        	android:background="@drawable/persion_background" 
        	android:orientation="vertical"  >
             
            <ImageView 
             	android:layout_width="fill_parent"
             	android:layout_height="1dip"    
            	android:background="@drawable/persion_line" />
    
          	<RelativeLayout
        		android:id="@+id/add_layout_01"
        		android:layout_width="fill_parent"
        		android:layout_height="45dip"      
        		android:clickable="true"
      			android:background="@drawable/persion_change" >
          		<ImageView
            		android:id="@+id/add_img_01"
            		android:layout_width="36.0dip"
            		android:layout_height="36.0dip"
            		android:layout_centerVertical="true"
            		android:layout_marginLeft="10dip"
            		android:background="@drawable/persion_phone"
            		android:scaleType="fitXY" />
           
           		<TextView
        			android:id="@+id/card_text"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content" 
        			android:layout_marginLeft="10dip"
        			android:layout_centerVertical="true"  
        			android:layout_toRightOf="@id/add_img_01" 
        			android:text="姓名"
        			android:textSize="16sp"
        			android:textColor="#202020"  />
           		
          		<ImageView
                	android:id="@+id/row_img_01"
            		android:layout_width="wrap_content"
        			android:layout_height="wrap_content"  
        			android:layout_marginRight="10dip"      	     	
        			android:scaleType="matrix"
        			android:layout_centerVertical="true"
        			android:layout_alignParentRight="true"
        			android:src="@drawable/persion_flag" />
              
          	</RelativeLayout>
          
          	<ImageView 
             	android:layout_width="fill_parent"
             	android:layout_height="1dip"    
            	android:background="@drawable/persion_line" />
         
 		</LinearLayout>
   
    <LinearLayout    
    	android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="15dip"      
        android:background="@drawable/persion_background" 
        android:orientation="vertical"  >
          	
        <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="1dip"    
            android:background="@drawable/persion_line" />
            
        <RelativeLayout
      		android:id="@+id/add_layout_02"
        	android:layout_width="fill_parent"
        	android:layout_height="45dip"      
        	android:clickable="true"
        	android:background="@drawable/persion_change" >
          
          	<ImageView
            	android:id="@+id/add_img_02"
            	android:layout_width="36.0dip"
            	android:layout_height="36.0dip"
            	android:layout_centerVertical="true"
            	android:layout_marginLeft="10dip"
            	android:background="@drawable/persion_phone"
            	android:scaleType="fitXY" />
           
           <TextView
        		android:id="@+id/card_text"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="10dip"
        		android:layout_centerVertical="true"  
        		android:layout_toRightOf="@id/add_img_02" 
        		android:text="性别"
        		android:textSize="16sp"
        		android:textColor="#202020" />
          
          <ImageView
                android:id="@+id/row_img_02"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"  
        		android:layout_marginRight="10dip"      	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/persion_flag" />

      	</RelativeLayout>
      	<ImageView   
            android:layout_width="fill_parent"
            android:layout_height="1dip"    
            android:background="@drawable/persion_line"
            android:layout_marginLeft="60dip"  />
    
        <RelativeLayout
        	android:id="@+id/add_layout_03"
        	android:layout_width="fill_parent"
        	android:layout_height="45dip"      
        	android:clickable="true"
        	android:background="@drawable/persion_change" >
          
          	<ImageView
            	android:id="@+id/add_img_03"
            	android:layout_width="36.0dip"
            	android:layout_height="36.0dip"
            	android:layout_centerVertical="true"
            	android:layout_marginLeft="10dip"
            	android:background="@drawable/persion_phone"
            	android:scaleType="fitXY" />
          
          	<TextView
        		android:id="@+id/card_text"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="10dip"
        		android:layout_centerVertical="true"  
        		android:layout_toRightOf="@id/add_img_03" 
        		android:text="地址"
        		android:textSize="16sp"
        		android:textColor="#202020"
        	/>
          	
          	<ImageView
                android:id="@+id/row_img_03"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"  
        		android:layout_marginRight="10dip"      	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/persion_flag" />
         </RelativeLayout>
         <ImageView 
             android:layout_width="fill_parent"
             android:layout_height="1dip"    
             android:background="@drawable/persion_line"
             android:layout_marginLeft="60dip"  />
           
        <RelativeLayout
        	android:id="@+id/add_layout_04"
        	android:layout_width="fill_parent"
       		android:layout_height="45dp"      
        	android:clickable="true"
        	android:background="@drawable/persion_change"  >
          	
          	<ImageView
            	android:id="@+id/add_img_04"
            	android:layout_width="36.0dip"
            	android:layout_height="36.0dip"
            	android:layout_centerVertical="true"
            	android:layout_marginLeft="10dip"
            	android:background="@drawable/persion_phone"
            	android:scaleType="fitXY" />
          	
           	<TextView
        		android:id="@+id/card_text"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="10dip"
        		android:layout_centerVertical="true"  
        		android:layout_toRightOf="@id/add_img_04" 
        		android:text="联系方式"
        		android:textSize="16sp"
        		android:textColor="#202020" />
           
          	<ImageView
                android:id="@+id/row_img_04"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"  
        		android:layout_marginRight="10dip"      	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/persion_flag" />   
         </RelativeLayout>
         <ImageView  
        	android:layout_width="fill_parent"
            android:layout_height="1dip"    
            android:background="@drawable/persion_line" />
 	</LinearLayout> 
    
     <LinearLayout     
    	android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="15dip"      
        android:background="@drawable/persion_background" 
        android:orientation="vertical"   >
    
        <ImageView  
        	android:layout_width="fill_parent"
            android:layout_height="1dip"    
            android:background="@drawable/persion_line" />
          
        <RelativeLayout
        	android:id="@+id/add_layout_05"
        	android:layout_width="fill_parent"
        	android:layout_height="45dip"      
        	android:clickable="true"
        	android:background="@drawable/persion_change"  >
          	
         	<ImageView
            	android:id="@+id/add_img_07"
            	android:layout_width="36.0dip"
            	android:layout_height="36.0dip"
            	android:layout_centerVertical="true"
            	android:layout_marginLeft="10dip"
            	android:background="@drawable/persion_phone"
            	android:scaleType="fitXY" />
         	
           	<TextView
        		android:id="@+id/card_text"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="10dip"
        		android:layout_centerVertical="true"  
        		android:layout_toRightOf="@id/add_img_07" 
        		android:text="微信"
        		android:textSize="16sp"
        		android:textColor="#202020" />
          
          	<ImageView
                android:id="@+id/row_img_07"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"  
        		android:layout_marginRight="10dip"      	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/persion_flag" />

              
       	   </RelativeLayout>
       	   <ImageView  
        		android:layout_width="fill_parent"
            	android:layout_height="1dip"    
            	android:background="@drawable/persion_line" />
       	   
       	   <RelativeLayout
        	android:id="@+id/add_layout_05"
        	android:layout_width="fill_parent"
        	android:layout_height="45dip"      
        	android:clickable="true"
        	android:background="@drawable/persion_change"  >
          	
         	<ImageView
            	android:id="@+id/add_img_07"
            	android:layout_width="36.0dip"
            	android:layout_height="36.0dip"
            	android:layout_centerVertical="true"
            	android:layout_marginLeft="10dip"
            	android:background="@drawable/persion_phone"
            	android:scaleType="fitXY" />
         	
           	<TextView
        		android:id="@+id/card_text"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="10dip"
        		android:layout_centerVertical="true"  
        		android:layout_toRightOf="@id/add_img_07" 
        		android:text="QQ"
        		android:textSize="16sp"
        		android:textColor="#202020" />
          
          	<ImageView
                android:id="@+id/row_img_07"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"  
        		android:layout_marginRight="10dip"      	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/persion_flag" />

       	   </RelativeLayout>
       	   <ImageView  
        		android:layout_width="fill_parent"
            	android:layout_height="1dip"    
            	android:background="@drawable/persion_line" />
 	    </LinearLayout> 
     </LinearLayout>
     
    <RelativeLayout 
    	android:layout_width="match_parent"
    	android:layout_height="match_parent" 
    	android:id="@+id/relativelayout">
        
        <Button 
        	android:id="@+id/back"
        	android:layout_height="40dp"
        	android:layout_width="match_parent"
       		android:layout_alignParentBottom="true"
        	android:layout_marginLeft="25dp"
        	android:layout_marginRight="25dp"
        	android:layout_marginBottom="20dp"
        	android:text="@string/back"
        	android:textSize="20sp"
        	android:layout_below="@id/ll_user_info"
        	android:background="@drawable/login_change"
        	android:textColor="@android:color/white"/>
     	
    </RelativeLayout>
   
</LinearLayout>
